datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Board {
  id        Int      @id @default(autoincrement())
  title     String
  image     String
  category  Category
  createdAt DateTime @default(now())
  Card      Card[]
}

enum Category {
  CELEBRATION
  THANK_YOU
  INSPIRATION
}

model Card {
  id       Int      @id @default(autoincrement())
  message  String
  gif      String
  upvotes  Int      @default(0)
  boardId  Int
  pinned   Boolean
  pinnedAt DateTime
  board    Board    @relation(fields: [boardId], references: [id])
}
